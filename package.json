{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node scripts/esbuild.js",
    "build": "cross-env NODE_ENV=production node scripts/esbuild.js && web-ext build --filename=chrome.zip",
    "build:rolldown": "cross-env NODE_ENV=production rolldown --config ./rolldown.config.js",
    "build:firefox": "cross-env NODE_ENV=production EXTENSION=firefox node scripts/esbuild.js && web-ext build --filename=firefox.xpi",
    "start:chromium": "web-ext run --target=chromium",
    "start:firefox": "web-ext run --target=firefox-desktop",
    "pack:xpi": "web-ext build --filename=firefox.xpi",
    "pack:zip": "web-ext build --filename=chrome.zip",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "init:playwright": "playwright install chromium --with-deps",
    "test:playwright": "playwright test"
  },
  "devDependencies": {
    "@babel/core": "7.26.9",
    "@fontsource-variable/fira-code": "5.2.5",
    "@fontsource-variable/noto-sans-sc": "5.2.5",
    "@playwright/test": "1.51.0",
    "@rollup/plugin-url": "8.0.2",
    "@tailwindcss/postcss": "4.0.12",
    "@types/babel__core": "7.20.5",
    "@types/chrome": "0.0.308",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.13.9",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/webextension-polyfill": "0.12.3",
    "@ziloen/eslint-config": "0.1.60",
    "@ziloen/tailwind-config": "2.0.2",
    "babel-plugin-annotate-module-pure": "1.0.2",
    "chokidar": "4.0.3",
    "cross-env": "7.0.3",
    "esbuild": "0.25.0",
    "esbuild-plugin-copy": "2.1.1",
    "esbuild-style-plugin": "1.6.3",
    "eslint": "9.21.0",
    "fs-extra": "11.3.0",
    "globby": "14.1.0",
    "playwright": "1.51.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "react-refresh": "0.16.0",
    "rolldown": "1.0.0-beta.3-commit.4666fd5",
    "tailwindcss": "4.0.12",
    "ts-lib-enhance": "1.0.21",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "web-ext": "8.4.0"
  },
  "dependencies": {
    "axios": "1.8.2",
    "clsx": "2.1.1",
    "i18next": "24.2.2",
    "lodash-es": "4.17.21",
    "motion": "12.4.10",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "15.4.1",
    "rxjs": "8.0.0-alpha.14",
    "serialize-error": "12.0.0",
    "typed-webext": "0.6.12",
    "uuid": "11.1.0",
    "webextension-polyfill": "0.12.0"
  },
  "webExt": {
    "sourceDir": "dist/dev",
    "artifactsDir": "dist",
    "run": {
      "browserConsole": false,
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  }
}
