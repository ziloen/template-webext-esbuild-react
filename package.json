{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env scripts/rolldown.js",
    "dev:firefox": "node --env-file=.env --env-file=.env.firefox scripts/rolldown.js",
    "build": "node --env-file=.env.prod scripts/rolldown.js && web-ext build -s dist/chrome -n chrome.zip",
    "build:firefox": "node --env-file=.env.prod --env-file=.env.firefox scripts/rolldown.js && web-ext build -s dist/firefox -n firefox.xpi",
    "start:chromium": "web-ext run -t chromium",
    "start:firefox": "web-ext run -t firefox-desktop",
    "typecheck": "tsc -b --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "init:playwright": "playwright install chromium --with-deps",
    "test:playwright": "playwright test"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-beta.7",
    "axios": "1.13.2",
    "clsx": "2.1.1",
    "es-toolkit": "1.42.0",
    "i18next": "25.6.3",
    "motion": "12.23.24",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-i18next": "16.3.5",
    "rxjs": "8.0.0-alpha.14",
    "serialize-error": "12.0.0",
    "typed-webext": "0.7.9",
    "uuid": "13.0.0",
    "webextension-polyfill": "0.12.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@fontsource-variable/fira-code": "5.2.7",
    "@fontsource-variable/noto-sans-sc": "5.2.9",
    "@playwright/test": "1.57.0",
    "@prettier/plugin-oxc": "0.1.2",
    "@rollup/plugin-babel": "6.1.0",
    "@svgr/core": "8.1.0",
    "@svgr/plugin-jsx": "8.1.0",
    "@tailwindcss/postcss": "4.1.17",
    "@types/babel__core": "7.20.5",
    "@types/chrome": "0.1.31",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/webextension-polyfill": "0.12.4",
    "@vitejs/plugin-react": "5.1.1",
    "@ziloen/eslint-config": "0.1.74",
    "@ziloen/tailwind-config": "2.0.13",
    "babel-plugin-annotate-module-pure": "1.0.4",
    "browserslist-to-esbuild": "2.1.1",
    "chokidar": "5.0.0",
    "core-js": "3.47.0",
    "eslint": "9.39.1",
    "fs-extra": "11.3.2",
    "playwright": "1.57.0",
    "postcss-preset-env": "10.4.0",
    "prettier": "3.7.3",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.1",
    "rolldown": "1.0.0-beta.52",
    "rollup-plugin-copy": "3.5.0",
    "sonda": "0.10.1",
    "svgo": "4.0.0",
    "tailwindcss": "4.1.17",
    "ts-lib-enhance": "1.0.22",
    "typescript": "5.9.3",
    "unplugin": "2.3.11",
    "web-ext": "9.2.0"
  },
  "webExt": {
    "artifactsDir": "dist",
    "run": {
      "browserConsole": false,
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  }
}
