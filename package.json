{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env scripts/rolldown.js",
    "dev:firefox": "node --env-file=.env --env-file=.env.firefox scripts/rolldown.js",
    "build": "node --env-file=.env.prod scripts/rolldown.js && web-ext build -n chrome.zip",
    "build:firefox": "node --env-file=.env.prod --env-file=.env.firefox scripts/rolldown.js && web-ext build -n firefox.xpi",
    "start:chromium": "web-ext run -t chromium",
    "start:firefox": "web-ext run -t firefox-desktop",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "init:playwright": "playwright install chromium --with-deps",
    "test:playwright": "playwright test"
  },
  "dependencies": {
    "axios": "1.11.0",
    "clsx": "2.1.1",
    "es-toolkit": "1.39.10",
    "i18next": "25.3.6",
    "motion": "12.23.12",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "15.6.1",
    "rxjs": "8.0.0-alpha.14",
    "serialize-error": "12.0.0",
    "typed-webext": "0.7.0",
    "uuid": "11.1.0",
    "webextension-polyfill": "0.12.0",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@babel/core": "7.28.3",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-react": "7.27.1",
    "@babel/preset-typescript": "7.27.1",
    "@fontsource-variable/fira-code": "5.2.6",
    "@fontsource-variable/noto-sans-sc": "5.2.6",
    "@playwright/test": "1.54.2",
    "@prettier/plugin-oxc": "0.0.4",
    "@rollup/plugin-babel": "6.0.4",
    "@tailwindcss/postcss": "4.1.12",
    "@types/babel__core": "7.20.5",
    "@types/chrome": "0.1.4",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.3.0",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@types/webextension-polyfill": "0.12.3",
    "@ziloen/eslint-config": "0.1.69",
    "@ziloen/tailwind-config": "2.0.8",
    "babel-plugin-annotate-module-pure": "1.0.4",
    "browserslist-to-esbuild": "2.1.1",
    "chalk": "5.6.0",
    "chokidar": "4.0.3",
    "core-js": "3.45.0",
    "esbuild": "0.25.9",
    "esbuild-plugin-copy": "2.1.1",
    "esbuild-style-plugin": "1.6.3",
    "eslint": "9.33.0",
    "fs-extra": "11.3.1",
    "globby": "14.1.0",
    "playwright": "1.54.2",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-tailwindcss": "0.6.14",
    "rolldown": "1.0.0-beta.32",
    "rollup-plugin-copy": "3.5.0",
    "sonda": "0.9.0",
    "tailwindcss": "4.1.12",
    "ts-lib-enhance": "1.0.21",
    "typescript": "5.9.2",
    "unplugin": "2.3.6",
    "web-ext": "8.9.0"
  },
  "webExt": {
    "sourceDir": "dist/dev",
    "artifactsDir": "dist",
    "run": {
      "browserConsole": false,
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  }
}
