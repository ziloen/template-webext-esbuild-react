{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development esno scripts/esbuild.mjs",
    "build": "cross-env NODE_ENV=production esno scripts/esbuild.mjs && web-ext build --filename=chrome.zip",
    "build:firefox": "cross-env NODE_ENV=production EXTENSION=firefox esno scripts/esbuild.mjs && web-ext build --filename=firefox.xpi",
    "start:chromium": "web-ext run --target=chromium",
    "start:firefox": "web-ext run --target=firefox-desktop",
    "pack:xpi": "web-ext build --filename=firefox.xpi",
    "pack:zip": "web-ext build --filename=chrome.zip",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "7.24.4",
    "@biomejs/biome": "1.6.4",
    "@fontsource-variable/fira-code": "5.0.17",
    "@fontsource-variable/noto-sans-sc": "5.0.5",
    "@playwright/test": "1.43.0",
    "@types/babel__core": "7.20.5",
    "@types/chrome": "0.0.265",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.12.4",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "@types/webextension-polyfill": "0.10.7",
    "@ziloen/eslint-config": "0.1.22",
    "@ziloen/tailwind-config": "1.1.2",
    "babel-plugin-annotate-module-pure": "1.0.2",
    "cross-env": "7.0.3",
    "esbuild": "0.20.2",
    "esbuild-plugin-copy": "2.1.1",
    "esbuild-style-plugin": "1.6.3",
    "eslint": "8.57.0",
    "esno": "4.7.0",
    "fs-extra": "11.2.0",
    "playwright": "1.43.0",
    "tailwindcss": "3.4.3",
    "ts-lib-enhance": "1.0.17",
    "typescript": "5.4.4",
    "web-ext": "7.11.0"
  },
  "dependencies": {
    "axios": "1.6.8",
    "clsx": "2.1.0",
    "framer-motion": "11.0.25",
    "i18next": "23.10.1",
    "lodash-es": "4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "14.1.0",
    "rxjs": "8.0.0-alpha.14",
    "serialize-error": "11.0.3",
    "typed-webext": "0.6.8",
    "ulid": "2.3.0",
    "webextension-polyfill": "0.10.0"
  },
  "webExt": {
    "sourceDir": "dist/dev",
    "artifactsDir": "dist",
    "run": {
      "browserConsole": false,
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  }
}