{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node scripts/rolldown.js",
    "build": "cross-env NODE_ENV=production node scripts/rolldown.js && web-ext build -n chrome.zip",
    "build:firefox": "cross-env NODE_ENV=production EXTENSION=firefox node scripts/rolldown.js && web-ext build -n firefox.xpi",
    "start:chromium": "web-ext run -t chromium",
    "start:firefox": "web-ext run -t firefox-desktop",
    "typecheck": "tsgo --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "init:playwright": "playwright install chromium --with-deps",
    "test:playwright": "playwright test"
  },
  "dependencies": {
    "axios": "1.10.0",
    "clsx": "2.1.1",
    "i18next": "25.2.1",
    "lodash-es": "4.17.21",
    "motion": "12.18.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "15.5.3",
    "rxjs": "8.0.0-alpha.14",
    "serialize-error": "12.0.0",
    "typed-webext": "0.6.13",
    "uuid": "11.1.0",
    "webextension-polyfill": "0.12.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@fontsource-variable/fira-code": "5.2.6",
    "@fontsource-variable/noto-sans-sc": "5.2.6",
    "@playwright/test": "1.53.0",
    "@tailwindcss/postcss": "4.1.10",
    "@types/babel__core": "7.20.5",
    "@types/chrome": "0.0.326",
    "@types/fs-extra": "11.0.4",
    "@types/lodash-es": "4.17.12",
    "@types/node": "24.0.3",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/webextension-polyfill": "0.12.3",
    "@typescript/native-preview": "7.0.0-dev.20250618.1",
    "@ziloen/eslint-config": "0.1.63",
    "@ziloen/tailwind-config": "2.0.6",
    "babel-plugin-annotate-module-pure": "1.0.2",
    "chalk": "5.4.1",
    "chokidar": "4.0.3",
    "cross-env": "7.0.3",
    "esbuild": "0.25.5",
    "esbuild-plugin-copy": "2.1.1",
    "esbuild-style-plugin": "1.6.3",
    "eslint": "9.29.0",
    "fs-extra": "11.3.0",
    "globby": "14.1.0",
    "playwright": "1.53.0",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.12",
    "rolldown": "1.0.0-beta.17",
    "rollup-plugin-copy": "3.5.0",
    "tailwindcss": "4.1.10",
    "ts-lib-enhance": "1.0.21",
    "typescript": "5.8.3",
    "web-ext": "8.7.1"
  },
  "webExt": {
    "sourceDir": "dist/dev",
    "artifactsDir": "dist",
    "run": {
      "browserConsole": false,
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  }
}
